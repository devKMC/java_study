package ch03;

import java.util.Iterator;
import java.util.Scanner;

// 4x4 기준으로
// 1x1 에서 시작한다고 보자

// While 문을 사용한다
// 위- 오른쪽 - 아래 - 왼쪽

// 1,1 에서시작한다고 가정

//(0,0) (0,1) (0,2) (0,3)
//(1,0) (1,1) (1,2) (1,3)
//(2,0) (2,1) (2,2) (2,3)
//(3,0) (3,1) (3,2) (3,3)

// D R U U L L D D 
// D R U U L L D D R R R U U U
// D R U U L L D D R R R U U U U LLLL DDDD
//
//
public class DalPangE {

	public static void main(String[] args) {
////		int number;
////		Scanner scan = new Scanner(System.in);
////		number = scan.nextInt();
//		Scanner scan = new Scanner(System.in);
//		int leng = scan.nextInt();
//	
	int leng = 5;
	int[][] array = new int [leng][leng];
	int row = 0;  //행 ( 가로 )
	int col = 0;  //열 ( 세로 )
	int x = 0, y= 0;
	int num = 1;
	int direction = ((leng*2) -1);
	

	
	
	
	
	for (int i=0 ; i<direction ; i++ ){
		switch (i % 4) {
		
		case 0 : // 오른쪽
			for(int j=0 ; j<leng; j++){
			array[x][y] = num;
			num++;
			y++;
			}
			
		
			x++;
			y--;
			leng--;
			break;
			
		case 1 : // 아래쪽
	for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
		num++;
		x++;
		}
		
		x--;
		y--;
		break;
		
		
		case 2: // 왼쪽
		for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
			num++;
			y--;
		}
			
		x--;
		y++;
		leng--;
		break;
	
		
		
	case 3:  // 위쪽
		for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
		num++;
		x--;
		}
			
		x++;
		y++;
		break;
	
		
	 
	
	
		
		}
		
	}
	for (int[] tmp:array) {
		for (int i: tmp)  {
			System.out.printf("%4d" , i);
		}System.out.println();
		
	}

	
	}
}
	
	




	
		 
	
	



