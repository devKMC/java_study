package ch03;

import java.util.Iterator;
import java.util.Scanner;

// 4x4 기준으로
// 1x1 에서 시작한다고 보자

// While 문을 사용한다
// 위- 오른쪽 - 아래 - 왼쪽

// 1,1 에서시작한다고 가정

//(0,0) (0,1) (0,2) (0,3)
//(1,0) (1,1) (1,2) (1,3)
//(2,0) (2,1) (2,2) (2,3)
//(3,0) (3,1) (3,2) (3,3)

// D R U U L L D D 5
// D R U U L L D D R R R U U U
// D R U U L L D D R R R U U U U LLLL DDDD
//
//
public class DalPangE {

	public static void main(String[] args) {
////		int number;
////		Scanner scan = new Scanner(System.in);
////		number = scan.nextInt();
//		Scanner scan = new Scanner(System.in);
//		int leng = scan.nextInt();
//	
	int leng = 5;							//배열의 크기
	int[][] array = new int [leng][leng];	//2차원 배열 선언
	
	int x = 0, y= 0;						//좌표 초기화
	int num = 1;							//배열에 들어갈 시작하는 숫자
	int direction = ((leng*2) -1);			//숫자 증가
	

//	
//	int direction = 0;
//	int steps = 1; 
//	//int steps =size - 1;
//	int stepCOunt = 0; 실제로 이동할 횟수
	
	
	
	for (int i=0 ; i<direction ; i++ ){   // 방향까지만큼 반복
		switch (i % 4) {					//방향 설정
		
		case 0 : // 오른쪽					//오른쪽으로 가면
			for(int j=0 ; j<leng; j++){
			array[x][y] = num;				//좌표에 숫자 삽입
			num--;							//넘값 증가
			y++;							// y값 증가 // 오른쪽 갑니다
			}
			
		
			x++;							//다음 행에 들어갈 x값 증가
			y--;							//위에서 증가된 y값을 감소
			leng--;							// 남은 사이즈 감소
			break;
			
		case 1 : // 아래쪽
	for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
		num++;
		x++;								//행만 바뀜
		}
		
		x--;								//행 열 전부 감소
		y--;
		break;
		
		
		case 2: // 왼쪽
		for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
			num++;
			y--;
		}
			
		x--;
		y++;
		leng--;
		break;
	
		
		
	case 3:  // 위쪽
		for (int j=0 ; j<leng; j++) {
		array[x][y] = num;
		num++;
		x--;
		}
			
		x++;
		y++;
		break;
	
		
	 
	
	
		
		}
		
	}
	
	for (int[] tmp:array) {
		for (int i: tmp)  {
			System.out.printf("%4d" , i);
		}System.out.println();
		
	}

	
	}
}
	
	



//배열의 [][] 을 xy가아닌 다른 값으로 하려고했는데 도저히 풀리지 않았고
//scan으로 찍어서 처음위치의 값을 찍으려고했는데 그것또한 실패함 (위치는 정해져있으니 시작을 내가 1을 입력하면 시작할수있게끔 하려했음)

	
		 
	
	



